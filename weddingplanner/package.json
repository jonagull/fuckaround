{
  "name": "weddingplanner-monorepo",
  "private": true,
  "scripts": {
    "all": "pnpm install -r",
    "pub": "./scripts/publish-packages.sh",
    "publish-types": "cd packages/types && pnpm run pub",
    "publish-shared": "cd packages/frontend-shared && pnpm run pub",
    "update-deps": "pnpm -r update",
    "dev:db": "docker-compose up -d",
    "dev:backend": "cd backend && pnpm dev",
    "dev:web": "cd web && pnpm dev",
    "dev": "concurrently \"pnpm dev:db\" \"pnpm dev:backend\" \"pnpm dev:web\"",
    "dev:all": "concurrently \"pnpm dev:db\" \"cd packages/types && pnpm dev\" \"cd packages/frontend-shared && pnpm dev\" \"cd backend && pnpm dev\" \"cd web && pnpm dev\"",
    "build:types": "cd packages/types && pnpm build",
    "build:shared": "cd packages/frontend-shared && pnpm build",
    "build:all": "pnpm build:types && pnpm build:shared",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,mjs,cjs}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,mjs,cjs}\"",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "check": "pnpm format:check && pnpm lint:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
